@model ClinicaSaude.Shared.Models.Consulta

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h1>Excluir Consulta</h1>

<div>
    <h4>Tem certeza que deseja excluir esta consulta?</h4>
    <dl class="row">
        <dt class="col-sm-2">Especialidade</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Data e Hora</dt>
        <dd class="col-sm-10">@Model.Data</dd>

        <dt class="col-sm-2">Paciente</dt>
        <dd class="col-sm-10">@Model.Paciente?.Nome</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ConsultaId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
