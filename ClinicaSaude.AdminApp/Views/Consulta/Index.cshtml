@model IEnumerable<ClinicaSaude.Shared.Models.Consulta>

@{
    ViewData["Title"] = "Consultas";
}

<h1>Consultas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Consulta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data e Hora</th>
            <th>Paciente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Data</td>
            <td>@item.Paciente?.Nome</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConsultaId" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.ConsultaId" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
