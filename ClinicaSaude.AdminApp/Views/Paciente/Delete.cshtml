@model ClinicaSaude.Shared.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <h5>Tem certeza que deseja excluir este paciente?</h5>
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">CPF</dt>
        <dd class="col-sm-9">@Model.CPF</dd>

        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PacienteId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
