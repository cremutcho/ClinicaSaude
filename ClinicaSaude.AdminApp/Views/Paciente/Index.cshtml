@model IEnumerable<ClinicaSaude.Shared.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar Novo Paciente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var paciente in Model)
            {
                <tr>
                    <td>@paciente.Nome</td>
                    <td>@paciente.CPF</td>
                    <td>@paciente.Telefone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@paciente.PacienteId" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@paciente.PacienteId" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum paciente cadastrado.</td>
            </tr>
        }
    </tbody>
</table>
