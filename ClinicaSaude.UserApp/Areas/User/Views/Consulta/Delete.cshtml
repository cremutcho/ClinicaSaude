@model ClinicaSaude.Shared.Models.Consulta

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h2>Excluir Consulta</h2>

<h3>Tem certeza que deseja excluir esta consulta?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Paciente</dt>
        <dd class="col-sm-10">@Model.Paciente.Nome</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ConsultaId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
