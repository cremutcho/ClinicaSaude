@model ClinicaSaude.Shared.Models.Paciente

@{
    ViewData["Title"] = "Minhas Consultas";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Consultas == null || !Model.Consultas.Any())
{
    <div class="alert alert-info">
        Você ainda não tem consultas agendadas.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consulta in Model.Consultas.OrderBy(c => c.Data))
            {
                <tr>
                    <td>@consulta.Data.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Substituído por href direto para teste -->
<a href="/User/Consulta/Create" class="btn btn-primary mt-3">
    Agendar Nova Consulta
</a>
